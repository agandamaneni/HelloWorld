<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" throwExceptions ="false" internalLogFile="c:\log.txt" internalLogLevel="Trace">

  <!--<variable name="LogFolderPath" value="${event-context:item=LogFolderPath}"/>-->
  <!--<variable name="BaseLayout" value="${event-context:item=ApplicationName}-${event-context:item=Version}-${event-context:item=AgentSessionId}-${event-context:item=CustomerSessionId}-${uppercase:${level}}|${date:format=HH\:mm\:ss\:fff}|${message}${exception:format=StackTrace:innerFormat=Message,StackTrace:maxInnerExceptionLevel=5}"/>-->
  <!--<variable name ="LayoutWithDate" value ="${longdate}|${level}|${logger}"/>-->
  <extensions>
    <add assembly="MGI.Common.Logging"/>
  </extensions>
  <targets>
    <target name="TextFileLog" xsi:type="File" autoFlush="true" fileName="c:\\test.log" encoding="iso-8859-2" />
    <target name="TextFileWrite" type="TextFile" />
    <target name="MongoDBWrite" type="MongoDB" />
  </targets>
  <rules>
    <logger name="*" minLevel="Debug" appendTo="MongoDBWrite"/>
    <logger name="*" minLevel="Debug" appendTo="TextFileWrite"/>
    <logger name="*" minlevel="Debug" writeTo="TextFileLog" />
  </rules>
</nlog>
